<div class="container animated fadeIn" style="display:flex; justify-content: center; align-items: center; height: 85vh; opacity: 0.9">
  <div class = "card" style = "background-color: black; width: 36%;"><br/>
    <h2 class= "text-center" style="color: white;">Change your password</h2><hr style="background: white">
    <div class = "card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.label :password, "New password" %>
          <% if @minimum_password_length %>
          <i class="labels;" style="font-size: 10px; color: yellow;">
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          </i>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control d-inline" %>
        </div>
        <br />
        <div class="field">
          <%= f.label :password_confirmation, "Confirm new password" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control d-inline" %>
        </div>

        <br/>

        <div class="actions text-center">
          <%= f.submit "Change my password", {:class => "btn btn-dark btn-lg mx-auto action-btn"} %><br/><br/>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
