<div class = "container-block mt-5" style="margin-left: 150px; margin-right: 150px;">
  <div class="card-deck mb-3 text-center design-data" style="color: black;">
    <div class="card mb-4 box-shadow animated fadeInLeft" style="width: 33.33%; height: 500px;">
      <div class="card-header">
        <h3 class="my-0 font-weight-normal text-capitalize design-title">My Apps In-Design/Development/Upgrade <i class="fa fa-wrench"></i></h3>
      </div>
      <div class="card-body" style="overflow: scroll; height: 10%">
        <% if @indesign_count != 0 %>
          <table class="table text-center w-25">
            <thead>
              <tr>
                <th><%= sortable "title", "Software Record" %> 
                <% if params[:direction] == "asc" || params[:direction] == nil %> 
                  <i class="fa fa-caret-up"></i>
                <% else %>
                  <i class="fa fa-caret-down float-none"></i>
                <% end %></th>
                <th><%= sortable "vendor_record_id", "Vendor" %> 
                <% if params[:direction] == "asc" || params[:direction] == nil %> 
                  <i class="fa fa-caret-up"></i>
                <% else %>
                  <i class="fa fa-caret-down float-none"></i>
                <% end %></th>
                <th><%= sortable "current_version", "Current Version" %> 
                <% if params[:direction] == "asc" || params[:direction] == nil %> 
                  <i class="fa fa-caret-up"></i>
                <% else %>
                  <i class="fa fa-caret-down float-none"></i>
                <% end %></th>
                <th>Status</th>
                <th><%= sortable "tentative_date_implemented", "Tentative Date Implemented" %> 
                <% if params[:direction] == "asc" || params[:direction] == nil %> 
                  <i class="fa fa-caret-up"></i>
                <% else %>
                  <i class="fa fa-caret-down float-none"></i>
                <% end %></th>
                <% if current_user.role.to_s == "viewer" %>
                  <th>Action</th>
                <% elsif current_user.role.to_s == "owner" %>
                  <th colspan="2">Actions</th>
                <% else %>
                  <th colspan="3">Actions</th>
                <% end %>
              </tr>
            </thead>
            <tbody>
              <% @softwarerecords_indesign.each do |record_indesign| %>
                <tr>
                  <td>
                    <% if record_indesign.url.empty? %>
                      <%= record_indesign.title %>
                    <% else %>
                      <a href=<%= generate_path(record_indesign.url) %> target="_blank"><%= record_indesign.title %></a>
                    <% end %>
                  </td>
                  <td><%= VendorRecord.find(record_indesign.vendor_record_id).title %></td>
                  <td><% if record_indesign.current_version.to_s.empty? %>N/A<% else %><%= record_indesign.current_version %><% end %></td>
                  <td style="font-size: 12px"><%= pills record_indesign.status %></td>
                  <td><% if record_indesign.tentative_date_implemented.to_s.empty? %>N/A<% else %><%= record_indesign.tentative_date_implemented %><% end %></td>
                  <% if current_user.role.to_s == "viewer" %>
                    <td><%= link_to '<i class="fas fa-eye"></i>'.html_safe, record_indesign , { :class => "text-success btn-icons", title: "View" }%></td>
                  <% elsif current_user.role.to_s == "owner" %>
                    <td><%= link_to '<i class="fas fa-eye"></i>'.html_safe, record_indesign , { :class => "text-success btn-icons", title: "View" }%></td>
                    <td><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_software_record_path(record_indesign) , { :class => "text-primary btn-icons", title: "Edit" }%></td>
                  <% else %>
                    <td><%= link_to '<i class="fas fa-eye"></i>'.html_safe, record_indesign , { :class => "text-success btn-icons", title: "View" }%></td>
                    <td><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_software_record_path(record_indesign) , { :class => "text-primary btn-icons", title: "Edit" }%></td>
                    <td><%= link_to '<i class="fas fa-trash"></i>'.html_safe, record_indesign, method: :delete, :class => "text-danger btn-icons", data: { confirm: 'Are you sure?' }, title: "Delete" %></td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p>No Apps found 'In-Design/Development/Upgrade'.</p>
        <% end %>
        <br/>
      </div>
    </div>
  </div>
  <div class="card-deck mb-3 text-center prod-data" style="color: black;">
    <div class="card mb-4 box-shadow animated fadeInRight" style="width: 33.33%; height: 500px;">
      <div class="card-header">
        <h3 class="my-0 font-weight-normal text-camelcase prod-title">My Apps In Production <i class="fa fa-bolt"></i></h3>
      </div>
      <div class="card-body" style="overflow: scroll; height: 10%">
        <% if @production_count != 0 %>
        <table class="table text-center">
          <thead>
            <tr>
              <th><%= sortable "title", "Software Record" %> 
                <% if params[:direction] == "asc" || params[:direction] == nil %> 
                  <i class="fa fa-caret-up"></i>
                <% else %>
                  <i class="fa fa-caret-down float-none"></i>
                <% end %></th>
              <th><%= sortable "vendor_record_id", "Vendor" %> 
                <% if params[:direction] == "asc" || params[:direction] == nil %> 
                  <i class="fa fa-caret-up"></i>
                <% else %>
                  <i class="fa fa-caret-down float-none"></i>
                <% end %></th>
              <th><%= sortable "current_version", "Current Version" %> 
                <% if params[:direction] == "asc" || params[:direction] == nil %> 
                  <i class="fa fa-caret-up"></i>
                <% else %>
                  <i class="fa fa-caret-down float-none"></i>
                <% end %></th>
              <% if current_user.role.to_s == "viewer" %>
                  <th>Action</th>
                <% elsif current_user.role.to_s == "owner" %>
                  <th colspan="2">Actions</th>
                <% else %>
                  <th colspan="3">Actions</th>
                <% end %>
            </tr>
          </thead>

          <tbody>
            <% @softwarerecords_production.each do |record_production| %>
              <tr>
                <td>
                  <% if record_production.url.empty? %>
                    <%= record_production.title %>
                  <% else %>
                    <a href=<%= generate_path(record_production.url) %> target="_blank"><%= record_production.title %></a>
                  <% end %>
                </td>
                <td><%= VendorRecord.find(record_production.vendor_record_id).title %></td>
                <td><% if record_production.current_version.to_s.empty? %>N/A<% else %><%= record_production.current_version %><% end %></td>
                <% if current_user.role.to_s == "viewer" %>
                    <td><%= link_to '<i class="fas fa-eye"></i>'.html_safe, record_production , { :class => "text-success btn-icons", title: "View" }%></td>
                  <% elsif current_user.role.to_s == "owner" %>
                    <td><%= link_to '<i class="fas fa-eye"></i>'.html_safe, record_production , { :class => "text-success btn-icons", title: "View" }%></td>
                    <td><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_software_record_path(record_production) , { :class => "text-primary btn-icons", title: "Edit" }%></td>
                  <% else %>
                    <td><%= link_to '<i class="fas fa-eye"></i>'.html_safe, record_production , { :class => "text-success btn-icons", title: "View" }%></td>
                    <td><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_software_record_path(record_production) , { :class => "text-primary btn-icons", title: "Edit" }%></td>
                    <td><%= link_to '<i class="fas fa-trash"></i>'.html_safe, record_production, method: :delete, :class => "text-danger btn-icons", title: "Delete", data: { confirm: 'Are you sure?' } %></td>
                  <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
        <% else %>
          <p>No Apps found In 'Production'.</p>
        <% end %>
        <br/>
      </div>
    </div>
  </div>
  <br/>
  <div class="card-deck mb-3 text-center" style="color: black;">
    <div class="card mb-4 box-shadow animated fadeInLeft" style="width: 33.33%; height: auto;">
      <div class="card-header">
        <h3 class="my-0 font-weight-normal text-uppercase">Users</h3>
      </div>
      <div class="card-body">
        <%= pie_chart User.group(:roles).count, messages: {empty: "No data"}, download: {filename: "Users"}, dataset: {borderWidth: 3, borderColor: "transparent"}, colors: ["#0DE1E8", "#E8880D", "#E8DE0D"], legend: "bottom"%><br/>
        <button type="button" class="btn btn-lg btn-block btn-outline-primary" onclick = "location.href='users'">View</button>
      </div>
    </div>
    <div class="card mb-4 box-shadow animated fadeInRight" style="width: 33.33%; height: auto">
      <div class="card-header">
        <h3 class="my-0 font-weight-normal text-uppercase">Software Records</h3>
      </div>
      <div class="card-body">
        <%= pie_chart SoftwareRecord.group(:status).count, messages: {empty: "No data"}, download: {filename: "SoftwareRecords"}, dataset: {borderWidth: 3, borderColor: "transparent"}, legend: "bottom" %><br/>
        <button type="button" class="btn btn-lg btn-block btn-outline-primary" onclick = "location.href='software_records'">View</button>
      </div>
    </div>
    <div class="card mb-4 box-shadow animated fadeInUp" style="width: 33.33%; height: auto">
      <div class="card-header">
        <h3 class="my-0 font-weight-normal text-uppercase">Vendor Records</h3>
      </div>
      <div class="card-body">
        <%= pie_chart @vendor_piechart_hash, messages: {empty: "No data"}, download: {filename: "Software Records grouped by Vendor Records"}, dataset: {borderWidth: 3, borderColor: "transparent"}, legend: {position: "none"} %><br/>
        <button type="button" class="btn btn-lg btn-block btn-outline-primary" onclick = "location.href='vendor_records'">View</button>
      </div>
    </div>
  </div>
  <br/>
  <div class="card-deck mb-3 text-center" style="color: black">
    <div class="card mb-4 box-shadow animated fadeInDown" style="width: 50.33%; height: auto">
      <div class="card-header">
        <h3 class="my-0 font-weight-normal text-uppercase">Software Records</h3>
      </div>
      <div class="card-body">
        <%= line_chart SoftwareRecord.group(:status).group_by_week(:created_at).sum(SoftwareRecord.all.count), legend: "bottom" %> <br/>
        <button type="button" class="btn btn-lg btn-block btn-outline-primary" onclick = "location.href='software_records'">View</button>
      </div>
    </div>
  </div>
</div>