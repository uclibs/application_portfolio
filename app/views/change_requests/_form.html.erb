<div class="container animated fadeIn" style="display:flex; justify-content: center; align-items: center; height: 85vh; opacity: 0.9">
  <div class = "card" style = "background-color: black; width: 36%;"><br/>
    <h1 class= "<%= component %> text-center" style="color: white;"><% if component.eql?("new") %>New Change Request<% else %>Edit Change Request<% end %></h1>
    <hr style="background-color: white">
    <div class = "card-body">
      <%= form_with(model: change_request, local: true) do |form| %>
        <% if change_request.errors.any? %>
          <div id="error_explanation">
            <% change_request.errors.full_messages.each do |message| %>
              <%= alert_generator message, "error" %>
            <% end %>
          </div>
        <% end %>

        <div class="field"
          <%= form.label :change_title %>
          <%= form.text_field :change_title, :class => "form-control" %>
        </div><br/>

        <div class="field"
          <%= form.label :change_description %>
          <%= form.text_area :change_description, :class => "form-control" %>
        </div><br/>

        <div class="field"
          <%= form.label :change_submitted_date %>
          <%= form.date_field :change_submitted_date, :class => "form-control" %>
        </div><br/>

        <div class="field"
          <%= form.label :change_completed %>
          <%= form.check_box :change_completed, :class => "form-control" %>
        </div><br/>

        <div class="field">
          <%= form.collection_select :software_record_id, SoftwareRecord.all.order(title: :asc), :id, :title, prompt: true %>
        </div>

        <br/><br/>
        <div class="form-group <%= component %>" style= "text-align: center;">
          <%= form.submit 'Save', class: "btn btn-primary" %>
          <% if component.to_s == "new" %>
            <%= link_to 'Cancel', session[:previous], :class => "btn btn-danger" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
