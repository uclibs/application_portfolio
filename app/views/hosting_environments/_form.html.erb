<div class="container animated fadeIn" style="display:flex; justify-content: center; align-items: center; height: 85vh; opacity: 0.9">
  <div class = "card" style = "background-color: black; width: 36%;"><br/>
    <h1 class= "<%= component %> text-center" style="color: white;"><% if component.eql?("new") %>New Hosting Environment<% else %>Edit Hosting Environment<% end %></h1>
    <hr style="background-color: white">
    <div class = "card-body">
      <%= form_with(model: hosting_environment, local: true) do |form| %>
        <% if hosting_environment.errors.any? %>
          <div id="error_explanation">
            <% hosting_environment.errors.full_messages.each do |message| %>
              <%= alert_generator message, "error" %>
            <% end %>
          </div>
        <% end %>

        <div class="field">
          <%= form.label :title %>
          <%= form.text_field :title, :class => "form-control" %>
        </div><br/>

        <div class="field">
          <%= form.label :description %>
          <%= form.text_field :description, :class => "form-control" %>
        </div>
        <br/><br/>
        <div class="mb-3 <%= component %>" style= "text-align: center;">
          <%= form.submit 'Save', class: "btn btn-primary" %>
          <% if component.to_s == "new" %>
            <%= link_to 'Cancel', session[:previous], :class => "btn btn-danger" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

